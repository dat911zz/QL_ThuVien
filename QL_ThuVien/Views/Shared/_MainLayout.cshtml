    <script>
        $(document).ready(function () {
            $('.btn-edit, #cart-books').tooltip({ show: { effect: "none", delay: 0 } });
        });
        function addCartBooks(mabs, mas, objTrigger) {
            $.ajax({
                type: "POST",
                url: "/Book/AddCartBooks",
                data: {
                    mabs: mabs,
                    mas: mas
                },
                success: function (data) {
                    if (data == 'True') {
                        $("#cover-cart-books").load("/Book/CartBooks");
                        $(objTrigger).removeClass("btn-add-cart-book btn-primary").addClass("btn-secondary");
                        Swal.fire({
                            icon: 'success',
                            title: 'Thành Công',
                            text: 'Thêm vào phiếu mượn ' + 'thành công',
                            showConfirmButton: true,
                            timer: 1000
                        });
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất Bại',
                            text: 'Thêm vào phiếu mượn ' + 'thất bại',
                            showConfirmButton: true,
                            timer: 1000
                        });
                    }
                }
            })
        }
        function removeCartBooks(mabs, mas, callback) {
            $.ajax({
                type: "POST",
                url: "/Book/RemoveCartBooks",
                data: {
                    mabs: mabs,
                    mas: mas
                },
                success: function (data) {
                    if (data == 'True') {
                        $("#cover-cart-books").load("/Book/CartBooks");
                        callback();
                    }
                    else {
                        Swal.fire({
                            icon: 'error',
                            title: 'Thất Bại',
                            text: 'Xóa khỏi phiếu mượn ' + 'thất bại',
                            showConfirmButton: true,
                            timer: 1500
                        });
                    }
                }
            })
        }
        function clearCartBooks() {
            $.ajax({
                url: "/Book/ClearCartBooks",
                success: function () {
                    window.location.reload();
                }
            })
        }
    </script>
